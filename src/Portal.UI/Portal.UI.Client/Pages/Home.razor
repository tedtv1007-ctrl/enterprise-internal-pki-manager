@page "/"
@using Portal.UI.Client.Services
@inject PkiApiClient ApiClient
@rendermode InteractiveAuto

<PageTitle>PKI Overview</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Enterprise PKI Overview <span class="badge bg-primary">PQC Ready</span></h1>

    @if (stats == null)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-dark text-white mb-4 border-primary">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Total Certificates</h5>
                        <h2 class="display-4">@stats.TotalCertificates</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white mb-4 border-warning">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Expiring Soon</h5>
                        <h2 class="display-4 text-warning">@stats.ExpiringSoon</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white mb-4 border-success">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Active Agents</h5>
                        <h2 class="display-4 text-success">@stats.ActiveAgents</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white mb-4 border-info">
                    <div class="card-body">
                        <h5 class="card-title text-muted">PQC-Ready</h5>
                        <h2 class="display-4 text-info">@stats.PqcReadyCertificates</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card bg-dark text-white">
                    <div class="card-header border-secondary">
                        Recent Activity
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Security monitoring active. All systems within normal parameters.</p>
                        <!-- Future: Activity log component -->
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-dark text-white">
                    <div class="card-header border-secondary">
                        Quick Actions
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a href="certificates" class="btn btn-outline-primary">Request New Certificate</a>
                        <a href="deployments" class="btn btn-outline-info">Manage Deployments</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private DashboardStats? stats;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            stats = await ApiClient.GetStatsAsync();
        }
        catch (Exception ex)
        {
            // Handle error or use mock data for demo
            stats = new DashboardStats { TotalCertificates = 124, ExpiringSoon = 3, ActiveAgents = 5, PqcReadyCertificates = 12 };
        }
    }
}
